<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id        = "com.doersguild.vlcharitabletrust"
version   = "1.0.1">

    <name>VL Charitable Trust</name>
    <description>Vasantha Lakshmi Charitable Trust and Research Center</description>
    
    <preference name="target-device" value="universal" />
    <preference name="android-targetSdkVersion" value="14" />
    
    <preference name="splash-screen-duration" value="20000" />
    <preference name="auto-hide-splash-screen" value="false" />
    
    <preference name="orientation" value="default" />
    
    <!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
    <preference name="permissions" value="none"/>
    
    <access origin="*" subdomains="true" />
    
    <author href="http://www.doersguild.com" email="sathvik@doersguild.com"> Doers' Guild  </author>
    
    <!-- Icons -->
    <icon src="icon.png" gap:role="default" />
    <icon src="icons/android/res/mipmap-mdpi/ic_launcher.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icons/android/res/mipmap-hdpi/ic_launcher.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icons/android/res/mipmap-xhdpi/ic_launcher.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="icons/android/res/mipmap-xxhdpi/ic_launcher.png" gap:platform="android" gap:density="xxhdpi" />
    

    <splash src="splash.png" gap:role="default" />

</widget>